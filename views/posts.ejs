        <div class="row">
            <div class="col-lg-12">
                <div class="list-group">
                  <!-- loop over posts and render them -->
                  <% posts.forEach((post) => { %>
                    <a href="/post/<%= post._id%>" class="list-group-item">
                      <h4 class="list-group-item-heading"><font color="blue"><%= post.title %></h4></font>
                      <p class="list-group-item-text"><font color="green"><%= post.timestamp %></p></font>
                      <p class="list-group-item-text"><%= post.body %></p>
                      <p class="list-group-item-text"> <i class="fa fa-phone"></i> <%= post.telephone %></p>
                    </a>
                  <% }) %>
                </div>
		<% if (pages > 0) { %>
                <ul class="pagination text-center">
                    <% if (current == 1) { %>
                        <li class="disabled"><a>First</a></li>
                    <% } else { %>
                        <li><a href="/posts/1">First</a></li>
                    <% } %>
                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                    <% if (i !== 1) { %>
                        <li class="disabled"><a>...</a></li>
                    <% } %>
                    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                        <% if (i == current) { %>
                            <li class="active"><a><%= i %></a></li>
                        <% } else { %>
                            <li><a href="/posts/<%= i %>"><%= i %></a></li>
                        <% } %>
                        <% if (i == Number(current) + 4 && i < pages) { %>
                            <li class="disabled"><a>...</a></li>
                        <% } %>
                    <% } %>
                    <% if (current == pages) { %>
                        <li class="disabled"><a>Last</a></li>
                    <% } else { %>
                        <li><a href="/posts/<%= pages %>">Last</a></li>
                    <% } %>
                </ul>
            <% } %>


            </div>
        </div>
    </div>
 	<%- include('partials/footer') %>
</body>


<script>
var slideIndex = 0;

function showSlides() {
    var i;
    var slides = document.getElementsByClassName("mySlides");
    var dots = document.getElementsByClassName("dot");
    for (i = 0; i < slides.length; i++) {
       slides[i].style.display = "none"; 

    }
    slideIndex++;
    if (slideIndex > slides.length) {slideIndex = 1}    
    for (i = 0; i < dots.length; i++) {
        dots[i].className = dots[i].className.replace(" active", "");
    }
    slides[slideIndex-1].style.display = "block";  
    dots[slideIndex-1].className += " active";
    setTimeout("showSlides()", 8000); // Change image every 5 seconds
}
showSlides();
</script>

